#!/bin/sh

SOURCE_IPSET='wan2'
SOURCE_FNAME="/etc/src_ip"

_ret=1

if [ -s "$SOURCE_FNAME" ]; then
	awk -v ipset="$SOURCE_IPSET" '{print "add " ipset " " $1}' "$SOURCE_FNAME" | ipset restore -! && _ret=0
fi

iptables -t mangle -A PREROUTING -m set --match-set $SOURCE_IPSET src -j MARK --set-mark 0x1

return $_ret
